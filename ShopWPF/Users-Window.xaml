<Window x:Class="WPFShop.Users_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFShop"
        mc:Ignorable="d"
        Title="Пользователи" Height="832" Width="1280"
        ResizeMode="NoResize" WindowState="Maximized">
    <Grid>
        <StackPanel>
            <ScrollViewer Margin="0,113,0,0" Width="1080">
                <DataGrid x:Name="DTUsers" AutoGenerateColumns="True" Width="1080" Height="650" Background="White" BorderBrush="#FFAE8FB1" BorderThickness="2" Foreground="#FF434E74"/>
            </ScrollViewer>
        </StackPanel>
        
       
        <Label Content="ПОЛЬЗОВАТЕЛИ" HorizontalAlignment="Left" Margin="100,30,0,0" VerticalAlignment="Top" Foreground="#FFAE8FB1" FontFamily="Inter ExtraBold" FontSize="40"/>
        
        <Button HorizontalAlignment="Left" Margin="470,43,0,0" VerticalAlignment="Top" Height="35" Width="35" BorderThickness="0"  Background="transparent" Panel.ZIndex="10" Click="Button_Reload">
            <Image Height="30" Source="images\reload-logo.png" Stretch="Fill" Width="30" Panel.ZIndex="10"/>
        </Button>

    </Grid>
</Window>
