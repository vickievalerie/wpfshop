<Window x:Class="WPFShop.Profile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFShop"
        mc:Ignorable="d"
        Title="Личный кабинет" Height="555" Width="959"
        ResizeMode="NoResize" WindowState="Maximized">
    <Grid>
        <Image HorizontalAlignment="Left" Source="images\logo-button.png" Height="104" Margin="75,49,0,0" VerticalAlignment="Top" Width="104"/>
        <Label Content="Возраст:" HorizontalAlignment="Left" Margin="75,174,0,0" VerticalAlignment="Top" Foreground="#FF434E74" FontFamily="Inter Medium" FontSize="24"/>
        <Label Content="Пол:" HorizontalAlignment="Left" Margin="75,212,0,0" VerticalAlignment="Top" Foreground="#FF434E74" FontFamily="Inter Medium" FontSize="24"/>
        <Label Content="Id:" HorizontalAlignment="Left" Margin="75,250,0,0" VerticalAlignment="Top" Foreground="#FF434E74" FontFamily="Inter Medium" FontSize="24"/>
        <Label Content="Логин:" HorizontalAlignment="Left" Margin="75,288,0,0" VerticalAlignment="Top" Foreground="#FF434E74" FontFamily="Inter Medium" FontSize="24"/>
        <Label Content="Должность:" HorizontalAlignment="Left" Margin="75,326,0,0" VerticalAlignment="Top" Foreground="#FF434E74" FontFamily="Inter Medium" FontSize="24"/>
        <Label Content="Почта:" HorizontalAlignment="Left" Margin="75,364,0,0" VerticalAlignment="Top" Foreground="#FF434E74" FontFamily="Inter Medium" FontSize="24"/>
        <Label Content="Номер телефона:" HorizontalAlignment="Left" Margin="75,402,0,0" VerticalAlignment="Top" Foreground="#FF434E74" FontFamily="Inter Medium" FontSize="24"/>
        <Label Content="Дата регистрации:" HorizontalAlignment="Left" Margin="75,437,0,0" VerticalAlignment="Top" Foreground="#FF434E74" FontFamily="Inter Medium" FontSize="24"/>

        <Label x:Name="Name" Content="—" HorizontalAlignment="Left" Margin="199,62,0,0" VerticalAlignment="Top" Foreground="#FF434E74" FontFamily="Inter ExtraBold" FontSize="32"/>

        <Label x:Name="Age" Content="—" HorizontalAlignment="Left" Margin="189,174,0,0" VerticalAlignment="Top" Foreground="#FF434E74" FontFamily="Inter SemiBold" FontSize="24"/>
        <Label x:Name="Gender" Content="—" HorizontalAlignment="Left" Margin="138,212,0,0" VerticalAlignment="Top" Foreground="#FF434E74" FontFamily="Inter SemiBold" FontSize="24"/>
        <Label x:Name="Id" Content="—" HorizontalAlignment="Left" Margin="113,250,0,0" VerticalAlignment="Top" Foreground="#FF434E74" FontFamily="Inter SemiBold" FontSize="24"/>
        <Label x:Name="Login" Content="—" HorizontalAlignment="Left" Margin="163,288,0,0" VerticalAlignment="Top" Foreground="#FF434E74" FontFamily="Inter SemiBold" FontSize="24"/>
        <Label x:Name="Work" Content="—" HorizontalAlignment="Left" Margin="228,326,0,0" VerticalAlignment="Top" Foreground="#FF434E74" FontFamily="Inter SemiBold" FontSize="24"/>
        <Label x:Name="Mail" Content="—" HorizontalAlignment="Left" Margin="163,364,0,0" VerticalAlignment="Top" Foreground="#FF434E74" FontFamily="Inter SemiBold" FontSize="24"/>
        <Label x:Name="Telephone" Content="—" HorizontalAlignment="Left" Margin="292,402,0,0" VerticalAlignment="Top" Foreground="#FF434E74" FontFamily="Inter SemiBold" FontSize="24"/>
        <Label x:Name="Date" Content="—" HorizontalAlignment="Left" Margin="309,437,0,0" VerticalAlignment="Top" Foreground="#FF434E74" FontFamily="Inter SemiBold" FontSize="24"/>
        <Button HorizontalAlignment="Right" Margin="0,67, 150,0" VerticalAlignment="Top" Height="35" Width="35" BorderThickness="0"  Background="transparent" Panel.ZIndex="10" Click="Button_Rename">
            <Image Height="30" Source="images\rename-logo.png" Stretch="Fill" Width="30" Panel.ZIndex="10"/>
        </Button>

        <Button HorizontalAlignment="Right" Margin="0,67,97,0" VerticalAlignment="Top" Height="35" Width="35" BorderThickness="0"  Background="transparent" Panel.ZIndex="10" Click="Button_Reload">
            <Image Height="30" Source="images\reload-logo.png" Stretch="Fill" Width="30" Panel.ZIndex="10"/>
        </Button>
    </Grid>
</Window>
